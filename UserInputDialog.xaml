<Window x:Class="ScriptQR.UserInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptQR"
        mc:Ignorable="d"
        Topmost="True" 
        Title="Авторизация" Height="230" Width="450" 
        ResizeMode="NoResize"
        Icon="C:\ScriptQR\Imge,Icon\icons8-key-1000.png"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            

            <TextBlock Text="Имя пользователя" Margin="0,0,0,5"/>
            <TextBox Name="UserNameTextBox" Width="Auto"/>
            <TextBlock Text="Пароль" Width="414"/>
            <PasswordBox Name="PasswordBox" Width="Auto"/>
            <TextBlock Text="Подразделение"/>
            <TextBox Name="OrganizationTextBox" Width="Auto"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,10,0">
                <Button Content="Ок" Width="90" Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
