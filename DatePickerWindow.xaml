<Window x:Class="ScriptQR.DatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор даты" Height="300" Width="400"
        WindowStartupLocation="Manual">

    
    <Grid>
        <Label Content="Дата начала:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <DatePicker x:Name="StartDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0"/>

        <Label Content="Дата окончания:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,10,0,0"/>
        <DatePicker x:Name="EndDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,35,0,0"/>
        
        <Button Content="Продолжить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="200,235,0,0" Click="ApplyAndContinue_Click"/>
    </Grid>
</Window>
